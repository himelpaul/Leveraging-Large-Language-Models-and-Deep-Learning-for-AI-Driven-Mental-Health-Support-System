# Environment Configuration Template
# Copy this to .env and fill in your values

# Model Paths
MODEL_BASE_PATH=models/base
MODEL_LORA_PATH=models/lora_final
MODEL_MERGED_PATH=models/merged_model
MODEL_GGUF_PATH=models/gguf/q4_K_S.gguf

# Data Paths
DATA_TRAIN_PATH=data/train.jsonl
DATA_VAL_PATH=data/val.jsonl
DATA_TEST_PATH=data/test.jsonl

# RAG Configuration
RAG_DB_PATH=rag/chroma_db
RAG_DOCS_PATH=rag/raw_docs
USE_RERANKER=false
RAG_TOP_K=3

# Training Configuration
BATCH_SIZE=1
GRADIENT_ACCUMULATION=4
LEARNING_RATE=2e-4
NUM_EPOCHS=3
MAX_SEQ_LENGTH=2048

# Hardware Configuration
DEVICE=auto
USE_GPU=true
FP16=true

# Crisis Detection
CRISIS_LOG_PATH=logs/crisis_detections.jsonl
EMERGENCY_REGION=us

# Application Settings
WEB_PORT=7860
WEB_SHARE=false
SAVE_CONVERSATIONS=true
CONVERSATION_LOG_PATH=logs/conversations

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# HuggingFace
HF_TOKEN=your_token_here
HF_MODEL_ID=meta-llama/Llama-3.2-1B-Instruct

# Optional: Weights & Biases for tracking
WANDB_PROJECT=mental-health-chatbot
WANDB_API_KEY=your_wandb_key_here
USE_WANDB=false
